{% extends "base.html.twig" %}

{% block pageTitle %}Nos derniers articles{% endblock %}

{% block body %}
  <div class="container">
    <div class="row">
      <div class="container">
        <div class="row">
          {% for books in book %}
            <div class="col-sm-12 col-md-4 col-lg-3 my-3">
              <div class="card mb">
                <img class="card-img-top" src="https://www.image.ie/images/no-image.png" alt="Card image cap">
                <div class="card-body mb">
                  <h5 class="card-title">{{ books.name }}</h5>
                  <p class="card-text">{{ books.extrait }} ...</p>
                  <ul class="list-group list-group-flush">
                    <li class="list-group-item">Auteur: {{ books.autor }}</li>
                    <li class="list-group-item">Publi√© le: {{ books.date|date("d/m/Y") }}</li>
                  </ul>
                  <div class="card-body">
                    <a href="single/{{ books.id }}" class="card-link">Card link</a>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
